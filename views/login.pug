extends layout

block content
  div.login-form-container
    h1.title-form= title
    div.text-infos Please log-in:

    form(method='POST' action='/login')
      div.form-group
        label.label-form(for='username') Username:
        input#username.form-control(
          type='text', 
          placeholder='Username' 
          name='username' 
          required = 'true'
          value=(undefined=== currentUser ? '' : currentUser.username))

        label(for='password') Password:
        input#password.form-control(
          type='password', 
          placeholder='Password' 
          name='password' 
          required = 'true'
        )
      button.btn.btn-primary(type='submit') Submit

  div.footer Clément Hurel © All rights reserved, 2022
