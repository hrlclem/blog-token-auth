extends layout

block content
  h1= title
  p Welcome to #{title}
  if user
    div #{user.username}

    div
      a(href='/articles/add')
        span.nav-text.header-btn Add article
        hr.hr-separate
        hr.hr-separate

    div.title All articles
            hr.hr-separate

    div.article-list
      each article in articles
        a(href=`${article.url}`)
          div.article-container 
            p.article-title.font-weight-bold= article.title
            p.article-content= article.content
            p.article-date= article.date
            p.article-user= article.user.username
        hr.hr-separate


  else
    div Not connected 
    div
      a(href='/users/auth/login/')
        span.nav-text.header-btn LOGIN

    div.article-list
      each article in articles
        a(href=`${article.url}`)
          div.article-container 
            p.article-title.font-weight-bold= article.title
            p.article-content= article.content
            p.article-date= article.date
            p.article-user= article.user.username
        hr.hr-separate
    